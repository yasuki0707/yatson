{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "paths": {
      "@modules/*": ["./modules/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/**/*",
    "**/__tests__/**"
  ]
}